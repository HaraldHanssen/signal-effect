{
  "compilerOptions": {
    // "module": "ESNext",
    // "target": "ES2022", // set to the *lowest* target you support
    // "strict": true,
    // //"verbatimModuleSyntax": true,
    // "declaration": true,
    // "sourceMap": true,
    // "declarationMap": true,
    "esModuleInterop": true,

    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "ES2021.WeakRef"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
